{
    "name": "react-client",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "dependencies": {
        "@apollo/client": "^3.7.9",
        "@emotion/react": "^11.10.5",
        "@emotion/styled": "^11.10.6",
        "@mui/icons-material": "^5.11.0",
        "@mui/material": "^5.11.10",
        "@types/node": "^18.14.2",
        "@types/react": "^18.0.9",
        "@types/react-dom": "^18.0.10",
        "@uiw/react-codemirror": "^4.19.4",
        "codemirror": "^6.0.1",
        "graphql": "^16.6.0",
        "graphql-ws": "^5.11.3",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-router-dom": "^6.8.2",
        "react-scripts": "5.0.1",
        "react-use-websocket": "^4.1.0",
        "typescript-parsec": "^0.3.2"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "tsc && react-scripts test",
        "eject": "react-scripts eject",
        "prettier": "npx prettier --write src",
        "generate-gql": "npx ts-node --esm bin/generate-graphql-client.ts && npx prettier --write src/chat/gql-types.ts",
        "dump-gql": "(cd ../server && cargo run --bin export_schema) > schema.gql",
        "postinstall": "npm run generate-gql"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest",
            "prettier"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^3.2.1",
        "@graphql-codegen/typescript": "^3.0.1",
        "@graphql-codegen/typescript-operations": "^2.5.6",
        "@graphql-codegen/typescript-react-apollo": "^3.3.7",
        "@graphql-tools/graphql-file-loader": "^7.5.16",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.2.0",
        "@testing-library/user-event": "^14.4.3",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
        "@typescript-eslint/parser": "^5.25.0",
        "eslint": "^8.15.0",
        "eslint-config-prettier": "^8.7.0",
        "jest": "^29.5.0",
        "prettier": "^2.8.4",
        "ts-node": "^10.9.1",
        "typescript": "4.6.4"
    }
}
